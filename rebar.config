{deps,
    [ {emqx_passwd, {git, "https://github.com/emqx/emqx-passwd", {tag, "v1.0"}}}
    , {clique, {git, "https://github.com/emqx/clique", {tag, "v0.3.11"}}}
    , {minireset, {git, "https://github.com/emqx/minirest", {tag, "v0.2.2"}}}
    ]}.

{edoc_opts, [{preprocess, true}]}.
{erl_opts, [warn_unused_vars,
            warn_shadow_vars,
            warn_unused_import,
            warn_obsolete_guard,
            debug_info,
            {parse_transform}]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, deprecated_function_calls,
               warnings_as_errors, deprecated_functions]}.
{cover_enabled, true}.
{cover_opts, [verbose]}.
{cover_export_enabled, true}.

{profiles,
    [{test, [
        {deps, [ {emqx, {git, "https://github.com/emqx/emqx", {branch, "develop"}}}
               , {emqx_management, {git, "https://github.com/emqx/emqx-management", {branch, "develop"}}}
               , {emqx_ct_helper, {git, "https://github.com/emqx/emqx-ct-helper", {branch, "develop"}}}
               ]}
    ]}
]}.

{pre_hooks,
  [ {"(linux|darwin|solaris)", compile, "make -C \"$REBAR_DEPS_DIR/cuttlefish\" all"}
  , {"(freebsd|netbsd|openbsd)", compile, "gmake -C \"$REBAR_DEPS_DIR/cuttlefish\" all"}
  , {"win32", compile, "make -C \"%REBAR_DEPS_DIR%/cuttlefish\" all -W test"}
  , {ct, "$REBAR_DEPS_DIR/cuttlefish/cuttlefish -l info -e etc/ -c etc/emqx_auth_clientid.conf -i priv/emqx_auth_clientid.schema -d data"}
  ]}.
